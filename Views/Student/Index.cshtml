@model IEnumerable<Student>
@{
    ViewData["Title"] = "หน้าแรก";
}

@if (Model.Count()>0)
{
    <h1 class="text-center">คะแนนสอบวิชาคอมพิวเตอร์</h1>
    <table class="table table-light">
        <thead>
            <tr>
                <th>รหัสนักศึกษา</th>
                <th>ชื่อนักศึกษา</th>
                <th>คะแนนสอบ</th>
                <th>แก้ไข</th>
                <th>ลบ</th>
                <th>หมายเหตุ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var students in Model)
            {
                <tr>
                    <td>@students.Id</td>
                    <td>@students.Name</td>
                    <td>@students.Score</td>
                    <td>
                        <a class="btn btn-warning"
                   asp-controller="Student"
                   asp-action="Edit"
                   asp-route-id="@students.Id">แก้ไข</a>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                   asp-controller="Student"
                   asp-action="Delete"
                   asp-route-id="@students.Id"
                           onclick="return confirm('คุณต้องการลย @students.Name หรือไม่')">ลบ</a>
                    </td>
                    <td>
                        @if (students.Score >= 50)
                        {
                            <strong class="text-success">สอบผ่าน</strong>
                        }
                        else
                        {
                            <strong class="text-danger">สอบไม่ผ่าน</strong>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-primary">ไม่มีข้อมูลนักเรียนในระบบ</div>
}

    
